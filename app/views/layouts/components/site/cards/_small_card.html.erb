<%= link_to url, class: "flex w-full h-48 rounded-lg mt-2 shadow overflow-y-hidden" do %>
  <div class="flex w-6/12 bg-white flex-col rounded-l-lg p-2 lg:p-8 xl:p-8 justify-center">
    <span class="font-semibold"><%= title %></span>
    <span class="font-semibold text-xs text-gray-400 mt-8"><%= published_at %></span>
  </div>
  <div class="flex h-auto w-6/12 bg-gray-500 rounded-r-lg relative">
    <%= image_tag url_for(image), class: "w-full h-full rounded-r-lg" if image.attached? %>
    <div class="absolute bg-blue-700 text-white font-semibold mt-auto bottom-0 ml-4 mb-4 text-xs rounded py-2 px-2"><%= editory %></div>
  </div>
<% end %>