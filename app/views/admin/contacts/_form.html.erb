<%= simple_form_for [:admin, @contact], :html => { :class => 'form-vertical' } do |f| %>
  <div class="block block-rounded block-themed">
    <div class="block-content">
      <%= f.input :name %>
      <%= f.input :email %>
      <%= f.input :message %>
      <%= f.input :city %>
      <%= f.input :state %>
      <%= f.input :phone %>
    </div>
    <div class="actions">
      <%= f.submit nil, :class => 'btn btn-primary', :data => {:disable_with => 'Salvando...'} %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                    admin_contacts_path, :class => 'btn btn-secondary' %>
    </div>
  </div>
<% end %>
