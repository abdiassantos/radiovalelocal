<%- model_class = SocialNetwork -%>
<%= content_for :page_header do %>
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
<% end %>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @social_network.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:description) %>:</strong></dt>
  <dd><%= @social_network.description %></dd>
  <dt><strong><%= model_class.human_attribute_name(:link) %>:</strong></dt>
  <dd><%= @social_network.link %></dd>
  <dt><strong><%= model_class.human_attribute_name(:color) %>:</strong></dt>
  <dd><%= @social_network.color %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              admin_social_networks_path, :class => 'btn btn-secondary'  %>

<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_admin_social_network_path(@social_network), :class => 'btn btn-secondary' %>

<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              admin_social_network_path(@social_network),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
