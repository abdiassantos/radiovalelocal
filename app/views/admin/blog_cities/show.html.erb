<%- model_class = Blog -%>
<%= content_for :page_header do %>
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
<% end %>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:user_id) %>:</strong></dt>
  <dd><%= @blog.user_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:county_id) %>:</strong></dt>
  <dd><%= @blog.county_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @blog.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:role) %>:</strong></dt>
  <dd><%= @blog.role %></dd>
  <dt><strong><%= model_class.human_attribute_name(:status) %>:</strong></dt>
  <dd><%= @blog.status_i18n %></dd>
  <dt><strong><%= model_class.human_attribute_name(:kind) %>:</strong></dt>
  <dd><%= @blog.kind_i18n %></dd>
  <dt><strong><%= model_class.human_attribute_name(:slug) %>:</strong></dt>
  <dd><%= @blog.slug %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              admin_blogs_path, :class => 'btn btn-secondary'  %>

<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_admin_blog_path(@blog), :class => 'btn btn-primary' %>

<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              admin_blog_path(@blog),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
