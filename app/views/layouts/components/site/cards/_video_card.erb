<%= link_to url, class: "flex flex-col shadow cardWidth mt-8 #{defined?(margin) ? 'mr-0 lg:mr-8 xl:mr-8' : ''}" do %>
  <div class="relative cardImageHeight hasSmall flex w-full bg-gray-500 rounded-t-lg">
    <% if image.present? %>
      <%= image_tag url_for(image), class: "w-full h-full" if image.attached? %>
    <% else %>
      <img src="https://amerikicklanghorne.com/wp-content/uploads/2017/04/default-image.jpg" class="w-full h-full">
    <% end %>
    <div class="absolute bg-gray-700 text-white font-semibold mt-auto bottom-0 ml-4 mb-4 text-lg rounded py-2 px-2"><i class="fas fa-play"></i></div>
  </div>
  <div class="flex w-full bg-white flex-col rounded-b-lg px-8 py-8 h-40 hasSmall">
    <span class="font-semibold text-lg"><%= title %></span>
  </div>
<% end %>