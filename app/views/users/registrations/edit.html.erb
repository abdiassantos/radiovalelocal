<div class="col-lg-8 col-md-8 mx-auto">
  <div class="card bg-secondary shadow border-0">
    <div class="card-header bg-white">
      <div class="btn-wrapper text-center">
        <h2>Minha Conta</h2>
      </div>
    </div>
    <div class="card-body px-lg-5 py-lg-5">
      <div class="text-center text-muted mb-4">
        <h4>Editar Perfil</h4>
      </div>
      <%= bootstrap_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%#= render "users/shared/error_messages", resource: resource %>
        <div class="form-group mb-3">
          <%= f.label :email %>
          <div class="input-group input-group-alternative">
            <div class="input-group-prepend">
              <span class="input-group-text">
                <%= fa_icon(:envelope) %>
              </span>
            </div>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", wrapper: false, class: 'form-control', placeholder: 'E-mail' %>
            <%= f.errors_on :email %>
            <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
              <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
            <% end %>
          </div>
        </div>
        <div class="form-group">
          <%= f.label :password, 'Nova senha' %>
          <div class="input-group input-group-alternative">
            <div class="input-group-prepend">
              <span class="input-group-text">
                <%= fa_icon(:asterisk) %>
              </span>
            </div>
            <%= f.password_field :password, hide_label: true, wrapper: false, class: 'form-control', placeholder: 'Nova senha', help: "Deixe em branco se não deseja alterar a senha atual." %>
            <%#= f.errors_on :password %>
          </div>
        </div>
        <div class="form-group">
          <%= f.label :current_password %>
          <div class="input-group input-group-alternative">
            <div class="input-group-prepend">
              <span class="input-group-text">
                <%= fa_icon(:asterisk) %>
              </span>
            </div>
            <%= f.password_field :current_password, hide_label: true, wrapper: false, class: 'form-control', placeholder: 'Senha atual', help: "Precisamos que você digite sua senha atual para confirmar as alterações." %>
            <%#= f.errors_on :current_password %>
          </div>
        </div>
        <div class="text-center">
          <%= f.button 'Salvar meu perfil', class: "btn btn-primary  my-4",
                                        data: { disable_with: "#{fa_icon('spinner spin')} Aguarde..." } %>
          <%= link_to root_path, class: 'btn btn-secondary my-4' do %>
            Voltar
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>
