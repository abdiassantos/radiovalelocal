<%= simple_form_for [:admin, @social_network], :html => { :class => 'form-vertical' } do |f| %>
  <div class="block block-rounded block-themed">
    <div class="block-content">
      <%= f.input :name %>
      <%= f.input :description %>
      <%= f.input :link %>
      <%= f.input :color %>
    </div>
    <div class="actions">
      <%= f.submit nil, :class => 'btn btn-primary', :data => {:disable_with => 'Salvando...'} %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                    admin_social_networks_path, :class => 'btn btn-secondary' %>
    </div>
  </div>
<% end %>
