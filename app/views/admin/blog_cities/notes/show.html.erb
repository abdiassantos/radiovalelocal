<%- model_class = Article -%>
<%= content_for :page_header do %>
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
<% end %>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:editory_id) %>:</strong></dt>
  <dd><%= @article.try(:editory).try(:name) %></dd>
  <dd><%= @article.try(:user).try(:name) %></dd>
  <dt><strong><%= model_class.human_attribute_name(:title) %>:</strong></dt>
  <dd><%= @article.title %></dd>
  <dt><strong><%= model_class.human_attribute_name(:content) %>:</strong></dt>
  <dd><%= @article.content.html_safe %></dd>
  <dt><strong><%= model_class.human_attribute_name(:subtitle) %>:</strong></dt>
  <dd><%= @article.subtitle %></dd>
  <dt><strong><%= model_class.human_attribute_name(:status) %>:</strong></dt>
  <dd><%= @article.status_i18n %></dd>
  <dt><strong><%= model_class.human_attribute_name(:published_at) %>:</strong></dt>
  <dd><%= @article.published_at %></dd>
  <dt><strong><%= model_class.human_attribute_name(:editor) %>:</strong></dt>
  <dd><%= @article.editor %></dd>
  <dt><strong><%= model_class.human_attribute_name(:count) %>:</strong></dt>
  <dd><%= @article.count %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              admin_articles_path, :class => 'btn btn-secondary'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_admin_article_path(@article), :class => 'btn btn-primary' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              admin_article_path(@article),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
